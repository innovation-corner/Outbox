<% include ./partials/head%>

<body data-spy="scroll" data-target="#navbar" data-offset="98">
	<div id="loading">
		<div class="load-circle"><span class="one"></span></div>
	</div>

	<main>
		<div class="container">
			<div class="grid grid-style">
					
				<div id="login">
					<a href="/">
						<h1>
							<i class="lnr lnr-unlink mr-2 color-success u-fs-20"></i>
							Promote&Pay
						</h1>
						<!-- <img class="dark-logo" src="../static/img/logo.svg" title="" alt=""> -->
					</a>
					<hr>
					<h1 class="text-center" style="padding-top: 20px;"><strong>Sign Up As Brand / Advertiser.</strong></h1>
					<h4 class="text-center" style="padding-bottom: 20px;">It's super fast and easy!</h3></h4>
					
					<form autocomplete="off" action="/auth/signup" method="POST">
						<fieldset>
							<!-- <input type="hidden" name="csrfmiddlewaretoken" value="QC4PKomul8U1ikSayn2LGaUmInkRmcCT2XctOzkJv4nxGaBak1cPx5T8xNBeiyxM"> -->
							<p>
                                <input 
                                    name="firstname"
                                    type="text" 
                                    required maxlength="30" 
                                    data-validation="required" 
                                    data-validation-error-msg="Please enter your firstname." 
                                    placeholder="Firstname (Contact person)"
                                >
                            </p>
                            <p>
                                <input 
                                    name="lastname"
                                    type="text" 
                                    required maxlength="30" 
                                    data-validation="required" 
                                    data-validation-error-msg="Please enter your lastname." 
                                    placeholder="Lastname (Contact person)"
                                >
                            </p>
							<p>
                                <input 
                                    name="email" 
									type="text" 
									data-validation="required" 
									data-validation-error-msg="Please enter your email." 
									required maxlength="80" 
									placeholder="Email (Contact email)"
								>
                            </p> 
                            <p>
                                <input
                                    name="brandname" 
                                    type="text" 
                                    required maxlength="30"
                                    data-validation="required" 
                                    data-validation-error-msg="Please enter a name for your brand." 
                                    placeholder="Brand / Advertiser name"
                                >
                            </p>
							<p>
                                <input
                                    name="phonenumber"
                                    type="text" 
                                    required maxlength="30"
                                    data-validation="required" 
                                    data-validation-error-msg="Please enter a phone number." 
                                    placeholder="Phone Number (Contact phone)"
                                >
                            </p>
							<p style="padding-bottom: 10px;">
								<input name="password" 
									type="password" 
									required maxlength="30" 
									data-validation="required" 
                                    data-validation-error-msg="Please enter your password."  
                                    placeholder="Password"
								>
							</p>
							<p>How Did You Hear About Us? (Optional)</p>
							<p>
								<select name="gottoknowus" id="">
									<option value="not selected">Click to select</option>
									<option value="facebook">Facebook</option>
									<option value="twitter">Twitter</option>
									<option value="instagram">Instagram</option>
									<option value="online-Blog">Online Blog</option>
									<option value="friends">Friends/Family</option>
									<option value="influencer">An influencer</option>
									<option value="brand">A brand</option>
									<option value="news">News/News Paper</option>
									<option value="others">Other</option>
								</select>
							</p>	

							<hr class="rule-auth-button">
							<button type="submit"><i class="fa fa-user-plus"></i> Create Account</button>
						</fieldset>
					</form>
				</div>
					
				<div>
					<div>
                        <p>Already have an account? <a href="/auth/signin">Log In</a> </p>
                        <p>An Influencer? Create an account 
                            <a href="/auth/signup-inf">Go here 
                                <i class="lnr lnr-arrow-right mr-2 color-success u-fs-20"></i>
                            </a> 
                        </p>
					</div>
					<hr>
					<p class="legal">By clicking on <strong>Create Account</strong>, you agree to our <a href="/terms">terms & conditions</a> and <a href="/privacy">privacy policy</a></p>
				</div>
			</div>
		</div>
    </main>


	<% include ./partials/foot%>

	<% if(error && error.length > 0 ) {%>
		<input type="hidden" id="toast" value="<%= error %>" >
		<script>
			var err = document.getElementById('toast').value;
			toastr["error"](err)
		</script>
	<%}%>

	<% if(success && success.length > 0) {%>
		<input type="text" id="toastr" value="<%= success %>" >
		<script>
			var suc = document.getElementById('toastr').value;
			toastr["success"](suc)
		</script>
	<%}%>

</body>
</html>