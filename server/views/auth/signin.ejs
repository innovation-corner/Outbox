<% include ./partials/head%>

<body data-spy="scroll" data-target="#navbar" data-offset="98">
	<div id="loading">
		<div class="load-circle"><span class="one"></span></div>
	</div>

	<main>
		<div class="container">
			<div class="grid grid-style">
					
				<div id="login">
					<a href="/">
						<h1>
							<i class="lnr lnr-unlink mr-2 color-success u-fs-20"></i>
							Promote&Pay
						</h1>
						<!-- <img class="dark-logo" src="../static/img/logo.svg" title="" alt=""> -->
					</a>
					<hr>
					<h1 class="text-center" style="padding-top: 20px;"><strong>Welcome Back.</strong></h1>
					<h4 class="text-center" style="padding-bottom: 20px;">Please login.</h3></h4>
					
					<form autocomplete="off" action="/auth/signin" method="POST">
						<fieldset>
							<!-- <input type="hidden" name="csrfmiddlewaretoken" value="QC4PKomul8U1ikSayn2LGaUmInkRmcCT2XctOzkJv4nxGaBak1cPx5T8xNBeiyxM"> -->
                            <p>
                                <input 
                                    name="email" 
									type="text" 
									data-validation="required" 
									data-validation-error-msg="Please enter your email." 
									required maxlength="80" 
									placeholder="Email"
								>
                            </p>
                            <p style="padding-bottom: 10px;">
								<input name="password" 
									type="password" 
									required maxlength="30" 
									data-validation="required" 
                                    data-validation-error-msg="Please enter your password."  
                                    placeholder="Password"
								>
							</p>
                            <hr class="rule-auth-button">
                            <button type="submit"><i class="fa fa-lock"></i> Secure Login</button>
						</fieldset>
					</form>
		
					<p><span class="btn-round">or</span></p>
		
					<p>
						<a href="/auth/facebook" class="facebook-before facebook-before-icon"><span class="fab fa-facebook-f"></span></a>
                        <a href="/auth/facebook"><button class="facebook">Login Using Facbook</button></a>	
					</p>
					<p>
						<a href="/auth/google" class="google-before google-before-icon"><span class="fab fa-google-plus-g"></span></a>
						<a href="/auth/google" ><button class="google">Login Using Google</button></a> 
					</p>
				</div>
					
				<div>
					<div>
						<p>Forgot your password? <a href="/auth/forgot-pword">Reset It</a> </p>
                        <p>An Advertiser / Brand? Create an account 
                            <a href="/auth/signup">Go here 
                                <i class="lnr lnr-arrow-right mr-2 color-success u-fs-20"></i>
                            </a> 
                        </p>
                        <p>An Influencer? Create an account 
                            <a href="/auth/signup-inf">Go here 
                                <i class="lnr lnr-arrow-right mr-2 color-success u-fs-20"></i>
                            </a> 
                        </p>
					</div>
					<hr>
					<p class="legal">By clicking on <strong>Log In</strong>, you agree to our <a href="/terms">terms & conditions</a> and <a href="/privacy">privacy policy</a></p>
				</div>
			</div>
		</div>
	</main>
	
	<% include ./partials/foot%>
	
	<% if(error && error.length > 0 ) {%>
		<input type="hidden" id="toast" value="<%= error %>" >
		<script>
			var err = document.getElementById('toast').value;
			toastr["error"](err)
		</script>
	<%}%>

	<% if(success && success.length > 0) {%>
		<input type="text" id="toastr" value="<%= success %>" >
		<script>
			var suc = document.getElementById('toastr').value;
			toastr["success"](suc)
		</script>
	<%}%>
    

</body>
</html>